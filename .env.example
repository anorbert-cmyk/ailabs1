# Perplexity API key (server-side only, never exposed to client)
PERPLEXITY_API_KEY=

# Anthropic API key for Haiku classifier (server-side only, never exposed to client)
# The Vite dev server proxies /api/anthropic requests and injects this key.
ANTHROPIC_API_KEY=

# Set to 'true' to enable API calls via the dev proxy
VITE_API_ENABLED=true

# Set to 'true' to enable Haiku classifier (requires ANTHROPIC_API_KEY above)
VITE_CLASSIFIER_ENABLED=true
